@using WebApiClient.Models;
@model List<Product>
@{
    ViewBag.Title = "List";
}

<h2>List</h2>

<div class="container">
    <form method="post" action="~/Home/List">
        <div class="row">
            <div class="col-md-5">
                <label>Api Url</label>
                <input type="text" name="Url" id="Url" placeholder="https://localhost:44378/" class="form-control" />
            </div>
            <div class="col-md-5">
                <label>Api</label>
                <input type="text" name="Api" id="Api" placeholder="api/urunyonetimi/" class="form-control" />
            </div>
            <div class="col-md-2">
                <button type="submit" class="btn btn-success">Listeyi Getir</button>
            </div>
        </div>
    </form>
</div>
<div class="container" style="margin-top:50px">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>Price</th>
                <th>Stock</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Count > 0)
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>@item.Description</td>
                        <td>@item.Price</td>
                        <td>@item.Stock</td>
                        <td>@item.Status</td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="6">Listelenecek Ürün Yok</td>
                </tr>
            }
        </tbody>
    </table>
</div>

